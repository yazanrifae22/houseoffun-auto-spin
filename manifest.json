{
  "manifest_version": 3,
  "name": "House of Fun Helper",
  "version": "3.0.0",
  "description": "A helpful extension for House of Fun players",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.houseoffun.com/*"],
      "js": [
        "content/ui/utils.js",
        "content/ui/notifications.js",
        "content/ui/panel.js",
        "content/ui/tabs.js",
        "content/ui/main-spin-stats.js",
        "content/ui/main-spin.js",
        "content/ui/dog-spin.js",
        "content/ui/history-view.js",
        "content/ui/debug-tracking.js",
        "content/ui/debug-view.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content/ui/styles.css", "content/ui/styles-components.css"],
      "matches": ["*://*.houseoffun.com/*"]
    }
  ],

  "permissions": ["activeTab", "storage", "webRequest", "scripting"],

  "host_permissions": ["*://*.houseoffun.com/*", "*://*.playtika.com/*"]
}
